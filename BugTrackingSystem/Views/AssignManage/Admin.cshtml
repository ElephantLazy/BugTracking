
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin View</h2>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered" >
    <thead>

        <tr>
            <th>Issue Type</th>
            <th>Summary</th>
            <th>Description</th>
            <th>Priority</th>
            <th>Reporter</th>
            <th>Issue Status</th>
            <th>Developer Name</th>
            <th>Completion ratio</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var issue in Model)
        {
            <tr>
                <td>@issue.IssueType</td>
                <td>@issue.Summary</td>
                <td>@issue.Description</td>
                <td>@issue.Priority</td>
                <td>@issue.Reporter</td>
                <td>@issue.Status</td>
                <td>@issue.Asignee</td>
                <td>@issue.AsigneeDescription</td>
                <td><a class="btn btn-primary" href="/AssignManage/AssignEdit/@issue.Id">Assign Developer</a></td>
    
            </tr>

        }

    </tbody>
</table>

